<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:clickable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50ffffff" />

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.newwebinfotech.rishabh.parkingapp.UpdateProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/vertical_margin">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/update_profile_picture"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_profile_shadow"
                    android:contentDescription="GST Profile"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />


            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Status"
                    android:inputType="textPersonName|textCapWords"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Full Name*"
                    android:inputType="textPersonName|textCapWords"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_vehicle_no_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Vehicle No. 1*"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_vehicle_type_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Vehicle Type 1*"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_vehicle_no_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Vehicle No. 2"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_vehicle_type_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Vehicle Type 2"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_vehicle_no_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Vehicle No. 3"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_vehicle_type_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Vehicle Type 3"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_vehicle_no_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Vehicle No. 4"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_vehicle_type_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Vehicle Type 4"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="City/State*"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Country*"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Email"
                    android:inputType="textCapCharacters"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_primary_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:enabled="false"
                    android:hint="Primary Mobile No.*"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_alternate_mobile1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Alternate Mobile No. 1*"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_alternate_mobile2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Alternate Mobile No. 2"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_half"
                android:textColorHint="@color/primary_text">

                <EditText
                    android:id="@+id/update_profile_alternate_mobile3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"


                    android:hint="Alternate Mobile No. 3"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textColor="@color/primary_text" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/cancel_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Cancel"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/save_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:text="Save"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</android.support.design.widget.CoordinatorLayout>