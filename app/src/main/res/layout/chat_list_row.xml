<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_row_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/llTextChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/person_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="9dp"
                tools:text="Chatting"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:autoLink="web"
              />

            <TextView
                android:id="@+id/tvMessageSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"

                android:text=""
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="10sp"
                android:visibility="gone" >
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/sent_or_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:textStyle="normal"
            tools:text="00:00 AM"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="10sp"
            android:visibility="visible" >
        </TextView>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img"/>

       <!-- <TextView
            android:id="@+id/sent_or_receive_deliver_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:text="ss"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="10sp"
            android:visibility="visible" >
        </TextView>-->
        <TextView
            android:id="@+id/tvCopyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:visibility="gone" >
        </TextView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>